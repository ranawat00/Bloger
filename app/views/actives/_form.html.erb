<h3>Post a Comment</h3>

<%= form_for(@active, html: {multipart: true}) [ @active, @comment ] do |f| %>
  <p>
    <%= f.label :author_name %><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </p>

  <p>
    <%# if @active.image.exists? %>
        <%#= image_tag @active.image.url %><br/>
    <%# end %>
    <%#= f.label :image, "Attach a New Image" %><br />
    <%#= f.file_field :image %>
  </p>

  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>

